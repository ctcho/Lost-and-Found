<style>
  body {
    background-color: lightblue;
  }

  table {
    border: 2px solid red;
  }

  th {
    height: 50px;
    font-size: 22px;
    padding: 3px;
    border-bottom: 1px solid black;
  }

  td {
    padding: 10px;
  }

  a:link, a:hover {
    border: 1px solid lightgrey;
    padding: 3px;
    background-color: lightyellow;
    font-size: 20px;
    color: black;
  }
</style>

<h1>Search Results<h1>

  <% if @items.count == 0 %>
  <p>There are no items that match your given parameters.</p>
  <%= link_to "Try Another Search", search_items_path %>
  <br><br>

  <% else %>
  <p>This is everything we could find.</p>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Owner</th>
        <th>Category ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.owner %></td>
          <td><%= item.category_id %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Try Another Search", search_items_path %>

  <% end %>
